<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="user">
	<!-- 쿼리문작성 -->
	<select id="selectByIdPw" parameterType="com.javaex.vo.UserVo" resultType="com.javaex.vo.UserVo">
		<![CDATA[
			select  no,
					name
			from users
			where id= #{id}
			and password= #{password}
		]]>
	</select>
	
	<!-- 회원정보수정폼 -->
	<select id="selectOneByNo" parameterType="int" resultType="com.javaex.vo.UserVo">
		<![CDATA[ 
			select 	no, 
					id,
					name,
					password,
					gender
			from users
			where no = #{no}
		]]>
	</select>
	
	<!-- 회원정보수정 -->
	<update id="update" parameterType="com.javaex.vo.UserVo">
		<![CDATA[ 
			update users
			set name = #{name},
				password = #{password},
				gender = #{gender}
			where no = #{no}
		]]>
	</update>	
	
	<!-- 바뀐 회원 이름 가져오기 -->
	<select id="getName" parameterType="int" resultType="com.javaex.vo.UserVo">
		select	name
		from users
		where no = #{no}
	</select>
	
	<!-- 회원가입 -->
	<insert id="join" parameterType="com.javaex.vo.UserVo">
		insert into users
		value(null, #{id},#{password},#{name},#{gender})
	</insert>
	
	<!-- 아이디 중복체크 -->
	<select id="idCheck" parameterType="String" resultType="com.javaex.vo.UserVo">
		select id
		from users
		where id = #{id}
	</select>
	
</mapper>
